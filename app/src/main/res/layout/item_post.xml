<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            tools:src="@drawable/avatar"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/avatar">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="可爱的小短"/>
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="9 分钟前"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44eeeeee"
        android:layout_marginTop="48dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            tools:text="#念叁福利#本周末，Air Jordan 5 Low “风鸢”即将与大家见面。新春佳节即将到来之际，@念叁 也为大家准备了这双鞋作为新年礼物！即日起至1月22日 18：30分，只要关注念叁微博，并转发本条微博，就有一位朋友有机会获赠 Air Jordan 5 Low “风鸢”，尺码任选，通过@微博抽奖平台 公布！祝大家好运！"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            >
            <ImageView
                android:id="@+id/pic0"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo" />
            <ImageView
                android:id="@+id/pic1"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic2"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic3"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic4"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic5"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic6"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic7"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
            <ImageView
                android:id="@+id/pic8"
                android:layout_width="@dimen/nine_pics_width"
                android:layout_height="@dimen/nine_pics_height"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                tools:src="@drawable/paperexpo"/>
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#1a000000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="#88eeeeee">
            <TextView
                android:id="@+id/reposts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reposts"/>
            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/comments"/>
            <TextView
                android:id="@+id/attitudes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/attitudes"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#1a000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>